{
    "manifest_version": 3,
    "name": "Quick Copy",
    "description": "Automatically copy selected text to clipboard",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_icon": "icon-inactive.png",
        "default_title": "Click to activate Quick Copy"
    },
    "background": {
        "service_worker": "background.js"
    }
}